
.autogrid
  box-shadow          0 0 5px rgba(0,0,0,.1)
  padding             1px
  border              1px solid #ddd
  display             inline-block

  +below(3)
    width             100%
    overflow-x        auto

  table
    background          #fff
    border-collapse     collapse

  .right
    text-align          right

  .center
    text-align          center

  .autosort
    cursor              pointer

  .autosort i
    opacity             .35
    padding-left       3px

  .autosort:hover i
      opacity          1
      color            #444

  .autosort i.on
    opacity            1
    color              #09c

  table tr td
    padding             6px 10px
    border              1px solid #e7e7e7

  td.action
    cursor pointer

  table tr.header td
    text-transform      uppercase
    font-size           1em
    color               #444
    font-weight         bold
    border              1px solid #ccc
    background          #fff
    box-shadow          0 2px 7px rgba(0,0,0,.2)

  tr.header td.action
    border 1px solid #ddd
    box-shadow none
    cursor default

  tr.arow:nth-child(odd)
    background-color #f7f7f7

  tr.arow.highlight
    background-color  #AEE1FC

div.pager
  display none

  ul.pager-basic
    display inline-block
    list-style-type none
    border 1px solid #ccc
    margin-top 3px
    box-shadow 2px 2px 10px rgba(0,0,0,.2)

    li
      display inline-block
      font-weight bold
      color #09c
      padding 6px 12px

    li.link:not(.disabled):hover
      cursor pointer

    li.page
      background-color transparent
      color #C00DB2
      font-weight bold

    li.disabled
      color #bbb

    li.link
      background #fff

    li.prev
      border-right 1px solid #ddd

    li.next
      border-left 1px solid #ddd
