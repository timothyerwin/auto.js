nav.automenu
  width 21rem
  position absolute
  background #f2f2f2
  box-shadow .15rem .15rem 2rem rgba(0,0,0,.25)
  top 2rem
  left 2rem

  ul li a
    padding 1.5rem 2rem
    font-size 1.2rem
    text-transform uppercase
    display block
    border-bottom 1px solid #dadada
    color #555

    i
      color #ccc
      position relative
      top 2px

    &.back
      text-align right
      color #888

    &:hover
      background #09c
      color #fff
      cursor pointer
